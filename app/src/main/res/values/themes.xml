<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.FakeLog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/light_purple</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.FakeLog</item>
    </style>

    <!-- Component styles -->

    <style name="TextStyleTitle">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyleSubtitle">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyleBasic">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextStyleCustom" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">@dimen/space_1x</item>
        <item name="android:paddingEnd">@dimen/space_1x</item>
    </style>

    <style name="ButtonStyleCustom" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BigButtonPrimary" parent="ButtonStyleCustom">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/sh_background_big_button_primary</item>
    </style>

    <style name="BigButtonSecondary" parent="ButtonStyleCustom">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/sh_background_big_button_secondary</item>
    </style>

</resources>